{
  "name": "ng2-cable",
  "version": "2.0.8-1",
  "description": "Easily integrate Rails' ActionCable into your Angular6+ application.",
  "main": "index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf .tmp && rimraf dist",
    "transpile": "ngc",
    "package": "rollup --config rollup.config.js",
    "minify": "./node_modules/uglify-js/bin/uglifyjs dist/bundles/ng2-cable.umd.js --compress --mangle --comments --output dist/bundles/ng2-cable.umd.min.js",
    "copy": "cpx './package-dist.json' dist && renamer --find 'package-dist.json' --replace 'package.json' ./dist/*",
    "build": "npm run clean && npm run transpile && npm run package && npm run minify && npm run copy"
  },
  "devDependencies": {
    "@angular/compiler": "^12",
    "@angular/compiler-cli": "^12",
    "cpx": "^1.5.0",
    "renamer": "^4.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "typescript": "~4.3",
    "uglify-js": "^3.14.2",
    "tslib": "1.14.1"
  },
  "dependencies": {
    "@angular/core": "^12",
    "@types/actioncable": "5.2.7",
    "actioncable": "5.2.6",
    "rxjs": "^6.6.7"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/08EINS/ng2-cable.git"
  },
  "keywords": [
    "cable",
    "ActionCable",
    "Angular2-cable",
    "Angular4-cable",
    "ng2-cable",
    "ng2Cable",
    "Rails",
    "rails",
    "Cable",
    "Angular2",
    "Angular4",
    "ionic2",
    "ionic3",
    "ionic2-cable",
    "ionic3-cable",
    "Rails5",
    "Action Cable"
  ],
  "author": "08EINS",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/08EINS/ng2-cable/issues"
  },
  "homepage": "https://github.com/08EINS/ng2-cable#readme"
}
